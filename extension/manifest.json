{
  "manifest_version": 3,
  "name": "TubeWiki",
  "version": "1.0.0",
  "description": "Wiki for YouTube videos",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*"
      ],
      "js": [
        "src/content/index.tsx"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  }
}